# =============================================================================
# VERIHOME - CONFIGURACIÓN DE ENTORNO DE DESARROLLO
# =============================================================================
# Copia este archivo como .env y configura las variables según tu entorno

# =============================================================================
# CONFIGURACIÓN BÁSICA DE DJANGO
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production-generate-new-one
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL
# =============================================================================
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=verihome_dev
DATABASE_USER=verihome_user
DATABASE_PASSWORD=verihome_password_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_CONN_MAX_AGE=600

# =============================================================================
# CONFIGURACIÓN DE REDIS (CACHE Y CELERY)
# =============================================================================
REDIS_URL=redis://localhost:6379/1
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# CONFIGURACIÓN DE EMAIL
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=VeriHome <your-email@gmail.com>
SERVER_EMAIL=VeriHome <your-email@gmail.com>

# =============================================================================
# CONFIGURACIÓN DE CORS PARA DESARROLLO
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# CONFIGURACIÓN DE ALMACENAMIENTO (AWS S3 - OPCIONAL)
# =============================================================================
# Descomenta y configura si usas AWS S3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=verihome-dev-bucket
# AWS_S3_REGION_NAME=us-east-1
# USE_S3=False

# =============================================================================
# CONFIGURACIÓN DE MAPBOX (PARA MAPAS)
# =============================================================================
MAPBOX_ACCESS_TOKEN=your-mapbox-token-here

# =============================================================================
# CONFIGURACIÓN DE PAGOS (STRIPE)
# =============================================================================
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# CONFIGURACIÓN ESPECÍFICA DE VERIHOME
# =============================================================================
VERIHOME_MAX_PROPERTY_IMAGES=20
VERIHOME_MAX_PROFILE_IMAGE_SIZE=5242880
VERIHOME_CONTRACT_EXPIRY_DAYS=365
VERIHOME_MESSAGE_ATTACHMENT_MAX_SIZE=10485760

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
DJANGO_SUPERUSER_EMAIL=admin@verihome.com
DJANGO_SUPERUSER_PASSWORD=admin123
ENABLE_DEBUG_TOOLBAR=True

# =============================================================================
# CONFIGURACIÓN DE DJANGO ALLAUTH
# =============================================================================
SITE_ID=1