# =============================================================================
# VERIHOME - CONFIGURACIÓN DE ENTORNO DE PRODUCCIÓN
# =============================================================================
# IMPORTANTE: NO COMMITS ESTE ARCHIVO CON VALORES REALES
# Copia este archivo como .env.production y configura todas las variables

# =============================================================================
# CONFIGURACIÓN BÁSICA DE DJANGO - PRODUCCIÓN
# =============================================================================
SECRET_KEY=CHANGE-THIS-TO-A-STRONG-SECRET-KEY-GENERATE-NEW-ONE
DEBUG=False
ALLOWED_HOSTS=your-production-domain.com,www.your-production-domain.com

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS POSTGRESQL - PRODUCCIÓN
# =============================================================================
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=verihome_production
DATABASE_USER=verihome_prod_user
DATABASE_PASSWORD=super-strong-database-password-here
DATABASE_HOST=your-db-host.amazonaws.com
DATABASE_PORT=5432
DATABASE_CONN_MAX_AGE=3600

# =============================================================================
# CONFIGURACIÓN DE REDIS - PRODUCCIÓN
# =============================================================================
REDIS_URL=redis://your-redis-host:6379/1
CELERY_BROKER_URL=redis://your-redis-host:6379/0
CELERY_RESULT_BACKEND=redis://your-redis-host:6379/0

# =============================================================================
# CONFIGURACIÓN DE EMAIL - PRODUCCIÓN
# =============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=VeriHome <noreply@your-domain.com>
SERVER_EMAIL=VeriHome Server <server@your-domain.com>

# =============================================================================
# CONFIGURACIÓN DE CORS - PRODUCCIÓN
# =============================================================================
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# =============================================================================
# CONFIGURACIÓN DE AWS S3 - PRODUCCIÓN
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=verihome-production-bucket
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net
USE_S3=True

# =============================================================================
# CONFIGURACIÓN DE MAPBOX - PRODUCCIÓN
# =============================================================================
MAPBOX_ACCESS_TOKEN=your-production-mapbox-token

# =============================================================================
# CONFIGURACIÓN DE PAGOS STRIPE - PRODUCCIÓN
# =============================================================================
STRIPE_PUBLISHABLE_KEY=pk_live_your-live-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-live-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-live-webhook-secret

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD - PRODUCCIÓN
# =============================================================================
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# =============================================================================
# CONFIGURACIÓN ESPECÍFICA DE VERIHOME - PRODUCCIÓN
# =============================================================================
VERIHOME_MAX_PROPERTY_IMAGES=30
VERIHOME_MAX_PROFILE_IMAGE_SIZE=10485760
VERIHOME_CONTRACT_EXPIRY_DAYS=365
VERIHOME_MESSAGE_ATTACHMENT_MAX_SIZE=15728640

# =============================================================================
# CONFIGURACIÓN DE LOGGING - PRODUCCIÓN
# =============================================================================
LOG_LEVEL=INFO
LOG_ROOT_LEVEL=WARNING

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================
SENTRY_DSN=your-sentry-dsn-here
ENABLE_MONITORING=True

# =============================================================================
# CONFIGURACIÓN DE DJANGO ALLAUTH - PRODUCCIÓN
# =============================================================================
SITE_ID=1

# =============================================================================
# CONFIGURACIÓN DE SERVIDOR WEB
# =============================================================================
STATIC_ROOT=/var/www/verihome/static/
MEDIA_ROOT=/var/www/verihome/media/